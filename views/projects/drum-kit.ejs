<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Drum Kit</title>
  <link href="https://fonts.googleapis.com/css?family=Arvo" rel="stylesheet">
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@500&family=Roboto&display=swap');
    html{
      margin: 0;
    }
    body {
      text-align: center;
      background-color: #283149;
    }

    h1 {
      font-size: 5rem;
      color: #DBEDF3;
      font-family: "Arvo", cursive;
      text-shadow: 3px 0 #DA0463;

    }
    footer{
      position: fixed;
      bottom: 0;
      width: 100%;
      display: flex;
      justify-self: flex-end;
    }
    .footer-logo{
      text-decoration: none;
      color: #ffffff;
      padding: 20px;
      font-family: 'Montserrat', sans-serif;
    }

    footer {
      color: #DBEDF3;
      font-family: sans-serif;
    }

    .w {
    background-image: url(/images/Drum-Kit-Images/crash.png);
    }

    .a {
      background-image: url(/images/Drum-Kit-Images/kick.png);
    }

    .s {
      background-image: url(/images/Drum-Kit-Images/snare.png);
    }

    .d {
      background-image: url(/images/Drum-Kit-Images/tom1.png);
    }

    .j {
      background-image: url(/images/Drum-Kit-Images/tom2.png);
    }

    .k {
      background-image: url(/images/Drum-Kit-Images/tom3.png);
    }

    .l {
      background-image: url(/images/Drum-Kit-Images/tom4.png);
    }

    .set {
      margin: 10% auto;
    }

    .game-over {
      background-color: red;
      opacity: 0.8;
    }

    .pressed {
      box-shadow: 0 3px 4px 0 #DBEDF3;
      opacity: 0.5;
    }

    .red {
      color: red;
    }

    .drum {
      outline: none;
      border: 10px solid #404B69;
      font-size: 5rem;
      font-family: 'Arvo', cursive;
      line-height: 2;
      font-weight: 900;
      color: #DA0463;
      text-shadow: 3px 0 #DBEDF3;
      border-radius: 15px;
      display: inline-block;
      width: 150px;
      height: 150px;
      text-align: center;
      margin: 10px;
      background-color: white;
    }

    #toggle {
      background-color: white;
      width: 100px;
      height: 50px;
    }
    #toggle:active {
      border: none;
    } 

  </style>
</head>

<body>

  <h1 id="title">Drum ü•Å Kit</h1>
  <div class="set">
    <button class="w drum">w</button>
    <button class="a drum">a</button>
    <button class="s drum">s</button>
    <button class="d drum">d</button>
    <button class="j drum">j</button>
    <button class="k drum">k</button>
    <button class="l drum">l</button>
  </div>

  <script>
    let numberOfDrums = document.querySelectorAll(".drum").length;
    for(let i=0; i<numberOfDrums; i++){
        document.querySelectorAll(".drum")[i].addEventListener("click", function(){
        let button = this.innerText;
      console.log(button)
      makeSound(button)
      animateButton(button)
        })
    }

    document.addEventListener("keydown", function(event){
        makeSound(event.key)
        animateButton(event.key)
    })

    function makeSound(key){
        switch(key){
            case "w": 
            let crash = new Audio("/audio/Drum-Kit-Audio/crash.mp3")
            crash.play();
            break;
            case "a": 
            let kick = new Audio("/audio/Drum-Kit-Audio/kick-bass.mp3")
            kick.play();
            break;
            case "s": 
            let snare = new Audio("/audio/Drum-Kit-Audio/snare.mp3")
            snare.play();
            break;
            case "d": 
            let tom1 = new Audio("/audio/Drum-Kit-Audio/tom-1.mp3")
            tom1.play();
            break;
            case "j": 
            let tom2 = new Audio("/audio/Drum-Kit-Audio/tom-2.mp3")
            tom2.play();
            break;
            case "k": 
            let tom3 = new Audio("/audio/Drum-Kit-Audio/tom-3.mp3")
            tom3.play();
            break;
            case "l": 
            let tom4 = new Audio("/audio/Drum-Kit-Audio/tom-4.mp3")
            tom4.play();
            break;
            default: 
        }
    }

    function animateButton(thisKey){
        let activeButton = document.querySelector("."+thisKey);
        activeButton.classList.add("pressed");
        setTimeout(function(){
            activeButton.classList.remove("pressed");
        }, 100);
    }
  </script>
</body>
<footer>
  <a class="footer-logo" href="/">
      Home
  </a>
</footer>
</html>
