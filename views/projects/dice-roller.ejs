<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Dice Roller</title>
    <link href="https://fonts.googleapis.com/css?family=Indie+Flower|Lobster" rel="stylesheet">
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@500&family=Roboto&display=swap');
      html{
        margin: 0;
      }
      .container {
        width: 70%;
        margin: auto;
        text-align: center;
      }

      .dice {
        text-align: center;
        display: inline-block;

      }

      body {
        background-color: #393E46;
      }
      footer{
        position: fixed;
        bottom: 0;
        width: 100%;
        display: flex;
        justify-self: flex-end;
      }
      .footer-logo{
        text-decoration: none;
        color: #ffffff;
        padding: 20px;
        font-family: 'Montserrat', sans-serif;
      }
      h1 {
        margin: 30px;
        font-family: 'Lobster', cursive;
        text-shadow: 5px 0 #232931;
        font-size: 8rem;
        color: #ffffff;
      }

      p {
        font-size: 2rem;
        color: #ffffff;
        font-family: 'Indie Flower', cursive;
      }

      img {
        width: 80%;
      }

      footer {
        margin-top: 5%;
        color: #EEEEEE;
        text-align: center;
        font-family: 'Indie Flower', cursive;

      }
      .playButton{
        margin:20px auto;
        height: 50px;
        width: 100px;
        display: flex;
        justify-content:center;
      }
      button{
        width: 100%;
        background-color: #0073ff;
        border: none;
        color: aliceblue;
        cursor: pointer;
        border-radius: 7px;
      }
      button:hover{
        background-color: #1462c2;
      }
      button:focus{
        border: none;
        outline: none;
      }
    </style>
  </head>
  <body>

    <div class="container">
      <h1>Click Play</h1>

      <div class="dice">
        <p>Player 1</p>
        <img class="img1" src="/images/Dicee-Challenge-Images/dice6.png">
      </div>

      <div class="dice">
        <p>Player 2</p>
        <img class="img2" src="/images/Dicee-Challenge-Images/dice6.png">
      </div>

    </div>
    <div class="playButton"><button onclick="dicePlay()">PLAY</button></div>

    <script>
      function dicePlay(){
        let randomNumber1 = Math.floor(Math.random()*6)+1;
        let randomNumber2 = Math.floor(Math.random()*6)+1;
          
        let firstDiceIMG = document.querySelector(".img1");
        let secondDiceIMG = document.querySelector(".img2");
        let title = document.querySelector("h1");
        firstDiceIMG.src = "/images/Dicee-Challenge-Images/dice"+randomNumber1+".png";
        secondDiceIMG.src = "/images/Dicee-Challenge-Images/dice"+randomNumber2+".png";
        if(randomNumber1 > randomNumber2){
          title.innerText = "Player 1 Wins!";
        }
        else if( randomNumber2 > randomNumber1){
          title.innerText ="Player 2 Wins!";
        }
        else if (randomNumber2 === randomNumber1){
          title.innerText = "Draw!";
        }

      }
    </script>

      </body>
    <footer>
      <a class="footer-logo" href="/">
          Home
      </a>
  </footer>
</html>
